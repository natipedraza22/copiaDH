<body>
    <header>
        <div>
            <article id="barra">
                25% OFF IN WINTER SEASON
            </article>
            <article class="menu">
                <ul>
                    <li><a href="#"><b>SALE</b></a></li>
                    <li><a href="#"><b>SHOP</b></a></li>
                    <li><a href="#"><b>CONTACT</b></a></li>
                </ul>
            </article>
            <article id="coco">
                <a href="#"><img src="images/LogoNuevo2.png" alt="COCO"></a>
            </article>
            <article class="derecha">
                <ul>
                    <li id="lup"><a href="#"><img src="images/iconos/lupa.png" alt="Lupa"></a></li>
                    <li><a href="#"><img src="images/iconos/usuario.png" alt="usuario"></a></li>
                    <li><a href="#"><img src="images/iconos/bolsa.png" alt="Carrito"></a></li>
